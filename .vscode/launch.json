    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\dist\\index",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--config",
                "${workspaceRoot}/jest.config.json",
                "--runInBand"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/build/**/*"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug E2E Tests",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--config",
                "${workspaceRoot}/src/test/jest-e2e.json",
                "--runInBand"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/build/**/*"
            ]
        }
    ]
}